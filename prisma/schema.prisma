generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id              String    @id @default(uuid()) @db.Uuid
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @updatedAt
  driverFirstName String?
  driverLastName  String?
  plate           String?   @unique
  carType         String?
  sex             String?
  phoneNumber     String?
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  fullName  String
  email     String    @unique
  role      String
}

model Emergency {
  id            Int    @id @default(autoincrement())
  passengerName String
  driverName    String
  message       String
}

model RatingScore {
  id          Int       @id @default(autoincrement())
  driverId    String
  ratingScore Int
  createdAt   DateTime? @default(now())
}

model EnumGender {
  id    Int    @id @default(autoincrement())
  value String @unique
}
