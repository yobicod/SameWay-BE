generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id              String    @id @default(uuid()) @db.Uuid
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @updatedAt
  driverFirstName String?
  driverLastName  String?
  plate           String?   @unique
  carType         String?
  sex             String?
  phoneNumber     String?

  @@map("driver")
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  fullName  String
  email     String    @unique
  role      String

  @@map("user")
}

model Emergency {
  id            Int    @id @default(autoincrement())
  passengerName String
  driverName    String
  message       String

  @@map("emergency")
}

model EnumGender {
  value       String  @id @unique
  description String?

  @@map("enum_genders")
}

model Feedback {
  id          Int       @id @default(autoincrement())
  driverId    String?
  userId      String?
  ratingScore Int?
  description String? 
  createdAt   DateTime? @default(now())
  @@map("feedback")
}
