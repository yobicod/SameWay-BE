generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id              String    @id @default(uuid()) @db.Uuid
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @updatedAt
  fullName        String? 
  plate           String?   @unique
  carType         String?
  sex             String?
  phoneNumber     String?
  user            User?     @relation(fields: [userEmail], references: [email])
  userEmail       String?   @unique

  @@map("driver")
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  fullName  String
  email     String    @unique
  role      String
  driver    Driver?

  @@map("user")
}

model Emergency {
  id            Int    @id @default(autoincrement())
  passengerName String
  driverName    String
  message       String

  @@map("emergency")
}

model Feedback {
  id          Int       @id @default(autoincrement())
  driverEmail String?
  userEmail   String?
  ratingScore Int?
  description String?
  createdAt   DateTime? @default(now())

  @@map("feedback")
}

model Report {
  id          Int         @id @default(autoincrement())
  driverEmail String
  userEmail   String
  problemType String
  description String
  ReportFile  ReportFile?

  @@map("report")
}

model ReportFile {
  id       Int    @id @default(autoincrement())
  report   Report @relation(fields: [reportId], references: [id])
  reportId Int    @unique
  fileUrl  String
  @@map("report_file")
}

model EnumGender {
  value       String  @id @unique
  description String?

  @@map("enum_genders")
}

model EnumProblem {
  value       String  @id @unique
  description String?

  @@map("enum_problems")
}
